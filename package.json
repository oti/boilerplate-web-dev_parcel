{
  "private": true,
  "name": "boilerplate_parcel",
  "version": "2.9.0",
  "description": "web development env boilerplate with parcel",
  "license": "MIT",
  "scripts": {
    "build": "parcel build src/html/index.pug --no-optimize --no-source-maps --public-url ./",
    "markuplint": "markuplint dist/**/*.html --ruleset ./markuplintrc",
    "pretty-quick": "pretty-quick",
    "start": "parcel src/html/index.pug --open --no-cache",
    "stylelint": "stylelint dist/**/*.css",
    "test": "npm run stylelint && npm run markuplint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@parcel/transformer-pug": "^2.8.3",
    "@parcel/transformer-sass": "^2.8.3",
    "@prettier/plugin-pug": "^2.4.1",
    "autoprefixer": "^10.4.13",
    "husky": "^8.0.3",
    "markuplint": "^3.2.0",
    "parcel": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "pug": "^3.0.2",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended": "^9.0.0",
    "typescript": "^4.9.4"
  }
}
