{
  "private": true,
  "name": "web-dev-boilerplate_parcel",
  "version": "1.0.0",
  "description": "Parcel を使ったウェブサイト開発環境のボイラープレート",
  "main": "index.html",
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "core-js": "^3.6.5"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "html-validator-cli": "^7.0.0",
    "markuplint": "^1.0.0-alpha.38",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.4",
    "pug": "^2.0.4",
    "sass": "^1.26.3",
    "stylelint": "^13.3.2",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "parcel src/index.pug --open --out-dir .tmp",
    "build": "parcel build src/index.pug --no-source-maps --public-url ./",
    "prettier:fix": "prettier --write .",
    "lint:html": "markuplint dist/*.html --ruleset ./markuplintrc",
    "lint:css": "stylelint dist/*.css",
    "validate:html": "html-validator --file=dist/index.html --verbose",
    "test": "npm run lint:css & npm run lint:html & npm run validate:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oti/web-dev-boilerplate_parcel.git"
  },
  "author": "oti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oti/web-dev-boilerplate_parcel/issues"
  },
  "homepage": "https://github.com/oti/web-dev-boilerplate_parcel#readme"
}
