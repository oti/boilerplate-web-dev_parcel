{
  "private": true,
  "name": "boilerplate_parcel",
  "version": "2.4.1",
  "description": "web development env boilerplate with parcel",
  "license": "MIT",
  "scripts": {
    "build": "parcel build src/index.pug --no-optimize --no-source-maps --public-url ./",
    "lint-css": "stylelint dist/*.css",
    "lint-html": "markuplint dist/*.html --ruleset ./markuplintrc",
    "prettier": "prettier --write .",
    "start": "parcel src/index.pug --open",
    "test": "npm run lint-css & npm run lint-html & npm run validate-html",
    "validate-html": "html-validator --file=dist/index.html --verbose",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@parcel/transformer-pug": "^2.7.0",
    "@parcel/transformer-sass": "^2.7.0",
    "@prettier/plugin-pug": "^2.2.0",
    "autoprefixer": "^10.4.8",
    "html-validator-cli": "^7.0.1",
    "husky": "^8.0.1",
    "markuplint": "^2.10.1",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "pug": "^3.0.2",
    "sass": "^1.54.5",
    "stylelint": "^14.11.0",
    "stylelint-config-recommended": "^9.0.0",
    "typescript": "^4.7.4"
  }
}
