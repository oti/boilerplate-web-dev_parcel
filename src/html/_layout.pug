block global

doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title= _title
    meta(name="viewport", content="viewport-fit=cover, width=device-width")
    meta(name="description", content=_siteDesc)
    meta(name="keywords", content=_siteKeywords)
    meta(property="og:site_name", content=_siteName)
    meta(property="og:description", content=_siteDesc)
    meta(property="og:title", content=_siteName)
    meta(property="og:image", content=`${_asset}image/og-image.png`)
    meta(property="og:url", content=_parmalink)
    meta(property="og:type", content="website")
    meta(property="og:local", content="ja")
    //- link(rel="shortcut icon", href=`${_asset}image//favicon.ico`)
    //- link(rel="apple-touch-icon", href=`${_asset}image//apple-touch-icon.png`)
    link(rel="image_src", href=`${_asset}image//og-image.png`)
    link(rel="canonical", href=_parmalink)
    link(href=`${_asset}style/main.scss`, rel="stylesheet")
    script(src=`${_asset}script/main.ts`, type="module")

  body
    header.Header
      h1= _title
      include _nav

    block contents

    footer.Footer
      p Under the CC BY-NC 4.0
